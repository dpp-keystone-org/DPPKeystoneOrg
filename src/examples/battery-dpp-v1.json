// This is a source file. Do not edit the file in the `dist` directory.
// This example represents a Digital Product Passport for a specific industrial battery.
// It includes the mandatory core header fields and a payload with battery-specific data points.
{
  "@context": "https://dpp-keystone.org/spec/contexts/v1/dpp-battery.context.jsonld",
  "@type": ["dppk:DigitalProductPassport", "dppk:Battery"],

  // --- Normative DPP Header ---
  // These fields are required for all DPPs, regardless of sector.
  "digitalProductPassportId": "urn:uuid:f81d4fae-7dec-11d0-a765-00a0c91e6bf6",
  "uniqueProductIdentifier": "urn:gtin:01234567890123",
  "granularity": "Item",
  "dppSchemaVersion": "ENXXX:v1.0",
  "dppStatus": "Active",
  "lastUpdate": "2024-05-21T10:00:00Z",
  "economicOperatorId": "urn:gln:9876543210987",
  "facilityId": "urn:gln:9876543210988",
  "contentSpecificationIds": ["draft_battery_specification_id"],

  // --- Core Product Information ---
  "productName": "Industrial Lithium-Ion Battery Module",
  "image": [
    {
      "resourceTitle": "Front View",
      "url": "/spec/examples/images/battery.svg",
      "contentType": "image/svg+xml"
    },
    {
      "resourceTitle": "Side View",
      "url": "/spec/examples/images/battery-side.svg",
      "contentType": "image/svg+xml"
    },
    {
      "resourceTitle": "Top View",
      "url": "/spec/examples/images/battery-top.svg",
      "contentType": "image/svg+xml"
    }
  ],

  // --- Battery-Specific Payload ---
  // This section contains data points relevant to the battery sector.
  // The vocabulary for these terms is defined in the battery-specific context and ontology.  
  "batteryCategory": "IndustrialBattery",
  "batteryChemistry": "LFP",
  "dateOfManufacture": "2024-01-15",

    // --- Documents (Aligned with Core Ontology) ---
  "documents": [
      {
        "@type": "RelatedResource",
        "resourceTitle": "IBU EPD Listing",
        "url": "https://ibu-epd.com/veroeffentlichte-epds/"
      }
  ],

  "nominalVoltage": 48.0,
  "ratedCapacity": 100.0,
  "recycledContentPercentage": 15.0,
  "batteryCarbonFootprint": {
    "bcfTotal": 120.5
  },
  "stateOfHealth": 98.5
}
