{
    "@context": [
        // Import the Core DPP Context definitions.
        // Assumes this file will be hosted at the defined persistent URI.
        "https://dpp-keystone.org/spec/contexts/v1/dpp-core.context.jsonld",
        
        // Define Textile-specific terms.
        {
            "xsd": "http://www.w3.org/2001/XMLSchema#",
            // ==================================================================
            // Textile Classes (for use in @type)
            // ==================================================================
            "TextileProduct": "dppk:TextileProduct",
            "FibreComposition": "dppk:FibreComposition",

            // ==================================================================
            // Properties (Fibre Composition)
            // ==================================================================
            "fibreComposition": {
                "@id": "dppk:fibreComposition",
                // Use @set as a product typically has a collection of different fibres.
                "@container": "@set"
            },
            "fibreType": "dppk:fibreType",
            "fibrePercentage": {
                "@id": "dppk:fibrePercentage",
                "@type": "xsd:decimal"
            },

            // ==================================================================
            // Properties (Production Steps)
            // ==================================================================
            "productionSteps": { "@id": "dppk:productionSteps", "@container": "@list" },
            "step": "dppk:productionStepType",
            "countryCode": "dppk:productionLocationCountry",

            // ==================================================================
            // Properties (Circularity and Sustainability)
            // ==================================================================
            
            // Note: Recycled Content uses the core property 'recycledContentPercentage'.

            "animalOriginNonTextile": {
                "@id": "dppk:animalOriginNonTextile",
                // Explicitly type as boolean for data integrity.
                "@type": "xsd:boolean"
            },

            // Durability & Quality Indicators
            "abrasionResistance": "dppk:abrasionResistance",
            "cycles": { "@id": "dppk:cycles", "@type": "xsd:integer" },

            "dimensionalStability": "dppk:dimensionalStability",
            "warpChange": { "@id": "dppk:warpChange", "@type": "xsd:decimal" },
            "weftChange": { "@id": "dppk:weftChange", "@type": "xsd:decimal" },

            "colorfastnessToWashing": "dppk:colorfastnessToWashing",
            "grade": { "@id": "dppk:grade", "@type": "xsd:decimal" },

            "microplasticRelease": "dppk:microplasticRelease",
            "value": { "@id": "dppk:value", "@type": "xsd:decimal" },

            //Properties (Size)
            // ==================================================================
            "apparelSize": "dppk:apparelSize",
            "apparelSizeSystem": "dppk:apparelSizeSystem",

            // ==================================================================
            // Properties (Care and Repair)
            // ==================================================================
            "careInstructions": "dppk:careInstructions",
            "repairabilityInformation": "dppk:repairabilityInformation"
        }
    ]
}