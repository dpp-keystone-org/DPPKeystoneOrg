{
    "@context": [
        // Import the Core DPP Context definitions.
        // Assumes this file will be hosted at the defined persistent URI.
        "https://dpp-keystone.org/spec/contexts/v1/dpp-core.context.jsonld",
        "https://dpp-keystone.org/spec/contexts/v1/dpp-product-details.context.jsonld",
        "https://dpp-keystone.org/spec/contexts/v1/dpp-epd.context.jsonld",
        "https://dpp-keystone.org/spec/contexts/v1/dpp-dopc.context.jsonld",
        
        // Define Construction and Heavy Industry specific terms.
        {
            // Define the dppk namespace locally to ensure terms are correctly expanded.
            "dppk": "https://dpp-keystone.org/spec/v1/terms#",

            // Add CEN namespace for URN support (Strategy 2)
            "cencpr": "urn:cen:cpr:",
            // ==================================================================
            // Construction Classes (for use in @type)
            // ==================================================================
            "ConstructionProduct": "dppk:ConstructionProduct",
            "DeclarationOfPerformance": "dppk:DeclarationOfPerformance",

            // ==================================================================
            // Properties (CPR Compliance and Documentation)
            // ==================================================================
            "hasDoP": "dppk:hasDoP",
            "dopIdentifier": "dppk:dopIdentifier",
            "declarationCode": "dppk:declarationCode",
            "declaredUses": "dppk:declaredUses",
            "latestDeinstallation": "dppk:latestDeinstallation",
            "notifiedBody": { "@id": "dppk:notifiedBody", "@type": "@id" },
            "technicalAssessmentBody": { "@id": "dppk:technicalAssessmentBody", "@type": "@id" },
            "validationReports": "dppk:validationReports",
            "europeanAssessmentDocument": "dppk:europeanAssessmentDocument",
            
            "harmonisedStandardReference": {
                "@id": "dppk:harmonisedStandardReference",
                "@type": "@id"
            },
            
            "notifiedBodyId": "dppk:notifiedBodyId",
            "avsSystem": "dppk:avsSystem",

            // ==================================================================
            // Properties (Essential Characteristics Examples)
            // ==================================================================
            "reactionToFire": "dppk:reactionToFire",
            // Note: These properties link to QuantitativeValue (defined in Core).
            "thermalConductivity": "dppk:thermalConductivity",
            "compressiveStrength": "dppk:compressiveStrength",

            // ==================================================================
            // Properties (Heavy Industry/Steel/Rail Examples)
            // ==================================================================
            "steelGrade": "dppk:steelGrade",
            "railProfile": "dppk:railProfile"
        }
    ]
}