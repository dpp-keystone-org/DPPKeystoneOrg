        // Assumes this file will be hosted at the defined persistent URI.
        "https://dpp-keystone.org/contexts/v1/dpp-core.context.jsonld",
        
        // Define Construction and Heavy Industry specific terms.
        {
            // Add CEN namespace for URN support (Strategy 2)
            "cencpr": "urn:cen:cpr:",
