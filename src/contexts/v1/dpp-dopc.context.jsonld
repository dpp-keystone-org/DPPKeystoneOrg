{
  "@context": {
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",

    "dopc": {
      "@id": "dppk:DoPCBlock",
      "@context": {
        "declarationCode": "dppk:declarationCode",
        "dateOfIssue": { "@id": "dppk:dateOfIssue", "@type": "xsd:date" },

        // --- 1. Top Level Simple Characteristics ---
        "tensileStrengthAdhesion": "dppk:tensileStrengthAdhesion",
        "modulusOfElasticityInCompression": { "@id": "dppk:modulusOfElasticityInCompression", "@type": "xsd:decimal" },
        "capillaryAbsorption": { "@id": "dppk:capillaryAbsorption", "@type": "xsd:decimal" },
        "dangerousSubstances": "dppk:dangerousSubstances",
        "shrinkageAndExpansion": "dppk:shrinkageAndExpansion",
        "slipSkidResistance": "dppk:slipSkidResistance",
        "thermalExpansion": "dppk:thermalExpansion",
        "declaredUnit": { "@id": "dppk:declaredUnit", "@type": "xsd:decimal" },
        "functionalUnit": { "@id": "dppk:functionalUnit", "@type": "xsd:decimal" },
        "referenceServiceLife": { "@id": "dppk:referenceServiceLife", "@type": "xsd:integer" },

        // --- 2. Scoped Characteristics (The "Magic" Nesting Logic) ---

        // Chloride Content (Maps '21DegC' -> Specific Chloride URI)
        "chlorideContent": {
          "@id": "dppk:chlorideContent",
          "@context": {
            "21DegC": { "@id": "dppk:chlorideContentAt21DegC", "@type": "xsd:decimal" }
          }
        },

        // Bond Strength (Maps '28Days' -> Specific Bond Strength URI)
        "bondStrength": {
          "@id": "dppk:bondStrength",
          "@context": {
            "28Days": { "@id": "dppk:bondStrengthAt28Days", "@type": "xsd:decimal" }
          }
        },

        // Thermal Compatibility
        "thermalCompatibility": {
          "@id": "dppk:thermalCompatibility",
          "@context": {
            "wetSurface": { "@id": "dppk:thermalCompatibilityWet", "@type": "xsd:decimal" }
          }
        },

        // Carbonation (Same key '21DegC' as Chloride, but maps to a STRING property here)
        "resistanceToCarbonation": {
          "@id": "dppk:resistanceToCarbonation",
          "@context": {
            "21DegC": { "@id": "dppk:carbonationResistanceAt21DegC", "@type": "xsd:string" }
          }
        },

        // Reaction to Fire (Preserves the System info by mapping to specific URIs)
        "reactionToFire": {
          "@id": "dppk:reactionToFire",
          "@context": {
            "avcpSystem1": { "@id": "dppk:reactionToFireSystem1", "@type": "xsd:string" },
            "avcpSystem3": { "@id": "dppk:reactionToFireSystem3", "@type": "xsd:string" },
            "avcpSystem4": { "@id": "dppk:reactionToFireSystem4", "@type": "xsd:string" }
          }
        },

        // Elastic Recovery (Deep Nesting)
        "elasticRecovery": {
          "@id": "dppk:elasticRecovery",
          "@context": {
            "methodA": {
              "@id": "dppk:methodA",
              "@context": {
                "25Percent": { "@id": "dppk:elasticRecoveryMethodA25", "@type": "xsd:decimal" }
              }
            }
          }
        },

        // Resistance to Flow
        "resistanceToFlow": {
          "@id": "dppk:resistanceToFlow",
          "@context": {
            "procedureA": {
              "@id": "dppk:procedureA",
              "@context": {
                "50DegC": { "@id": "dppk:flowResistanceProcedureA50", "@type": "xsd:decimal" }
              }
            }
          }
        }
      }
    }
  }
}