{
    "@context": [
        // Import the Core DPP Context definitions.
        // Assumes this file will be hosted at the defined persistent URI.
        "https://dpp-keystone.org/spec/contexts/v1/dpp-core.context.jsonld",
        
        // Define Battery-specific terms.
        {
            // ==================================================================
            // Battery Classes (for use in @type)
            // ==================================================================
            "Battery": "dppk:Battery",
            "BatteryCarbonFootprint": "dppk:BatteryCarbonFootprint",

            // ==================================================================
            // Battery Properties (General)
            // ==================================================================
            "batteryCategory": "dppk:batteryCategory",
            "batteryChemistry": "dppk:batteryChemistry",

            // ==================================================================
            // Battery Properties (Performance and Durability)
            // ==================================================================
            // Note: These properties link to QuantitativeValue (defined in Core).
            "ratedCapacity": { "@id": "dppk:ratedCapacity", "@type": "xsd:decimal" },
            "nominalVoltage": { "@id": "dppk:nominalVoltage", "@type": "xsd:decimal" },
            "expectedLifetime": "dppk:expectedLifetime",
            
            "stateOfHealth": { "@id": "dppk:stateOfHealth", "@type": "xsd:decimal" },

            // ==================================================================
            // Battery Properties (Carbon Footprint)
            // ==================================================================
            "batteryCarbonFootprint": "dppk:batteryCarbonFootprint",
            "bcfTotal": { "@id": "dppk:bcfTotal", "@type": "xsd:decimal" },
            "bcfPerformanceClass": "dppk:bcfPerformanceClass",
            "bcfDeclarationWebLink": {
                "@id": "dppk:bcfDeclarationWebLink",
                "@type": "@id"
            }
            
            // Note: Material composition (CRMs) utilizes the core properties (hasPart, weightPercentage, recycledContentPercentage).
        }
    ]
}
