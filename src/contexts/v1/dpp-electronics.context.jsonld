{
    "@context": [
        // Import the Core DPP Context definitions.
        // Assumes this file will be hosted at the defined persistent URI.
        "https://dpp-keystone.org/spec/contexts/v1/dpp-core.context.jsonld",
        
        // Define Electronics (EEE) specific terms.
        {
            "xsd": "http://www.w3.org/2001/XMLSchema#",
            // ==================================================================
            // EEE Classes (for use in @type)
            // ==================================================================
            "ElectronicDevice": "dppk:ElectronicDevice",
            "PowerTool": "dppk:PowerTool",

            // ==================================================================
            // Properties (Power and Energy)
            // ==================================================================
            "energyEfficiencyClass": "dppk:energyEfficiencyClass",

            // ==================================================================
            // Properties (Durability and Repairability)
            // ==================================================================
            "ipRating": "dppk:ipRating",

            // Explicitly type booleans for data integrity.
            "sparePartsAvailable": {
                "@id": "dppk:sparePartsAvailable",
                "@type": "xsd:boolean"
            },
            "serviceManualAvailable": {
                "@id": "dppk:serviceManualAvailable",
                "@type": "xsd:boolean"
            },
            
            "softwareUpdatePolicy": "dppk:softwareUpdatePolicy",



            // ==================================================================
            // Properties (Compliance and End-of-Life)
            // ==================================================================

            
            "weeeCategory": "dppk:weeeCategory",
            "disassemblyInstructions": "dppk:disassemblyInstructions",

            // ==================================================================
            // Properties (Specialized: Power Tools)
            // ==================================================================
            // ==================================================================
            // Type Coercion for simple key-value measurements
            // This allows the instance data to be "torque": 20, while
            // semantically expanding to the full QuantitativeValue object.
            // ==================================================================
            "torque": {
                "@id": "dppk:torque", "@type": "dppk:QuantitativeValue"
            },
            "maximumRatedSpeed": { "@id": "dppk:maximumRatedSpeed", "@type": "dppk:QuantitativeValue" },
            "ratedPower": { "@id": "dppk:ratedPower", "@type": "dppk:QuantitativeValue" },
            "voltage": { "@id": "dppk:voltage", "@type": "dppk:QuantitativeValue" },
            "maximumDrillingDiameter": { "@id": "dppk:maximumDrillingDiameter", "@type": "dppk:QuantitativeValue" },
            "chargingTime": { "@id": "dppk:chargingTime", "@type": "dppk:QuantitativeValue" },
            "warranty": { "@id": "dppk:warranty", "@type": "dppk:QuantitativeValue" }
        }
    ]
}
