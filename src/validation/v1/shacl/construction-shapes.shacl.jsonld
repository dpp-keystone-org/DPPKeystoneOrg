{
  // FIX: Import the standard SHACL context and define local prefixes.
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dppkval": "https://dpp-keystone.org/validation/v1/shacl/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",

    // Set the default vocabulary to SHACL to expand terms like "property", "path", etc.
    "@vocab": "http://www.w3.org/ns/shacl#",

    // Ensure that properties expecting an IRI value are correctly typed.
    "node": { "@type": "@id" },
    "path": { "@type": "@id" },
    "targetClass": { "@type": "@id" },
    "class": { "@type": "@id" },
    "datatype": { "@type": "@id" }
  },
  "@id": "dppkval:ConstructionShapes",
  "@type": "sh:ShapesGraph",
  
  "@graph": [
    {
      "@id": "dppkval:ConstructionProductShape",
      "@type": "sh:NodeShape",
      // Syntax updated for standard context (using prefixed name directly)
      "targetClass": "dppk:ConstructionProduct",
      // Assumes dppkval:DigitalProductPassportShape is defined elsewhere and loaded.
      "and": [
        { "node": "dppkval:DigitalProductPassportShape" }
      ],
      "property": [
        {
          "path": "dppk:documents",
          "name": "Documents",
          "node": "dppkval:DigitalDocumentShape",
          "minCount": 0
        },
        {
          "path": "dppk:railProfile",
          "name": "Rail Profile",
          "minCount": 0
        },
        {
          "path": "dppk:steelGrade",
          "name": "Steel Grade",
          "minCount": 0
        },
        {
          "path": "dppk:hasDoP",
          "name": "Declaration of Performance",
          "node": "dppkval:DoPShape",
          "minCount": 0 // Optional
        },
        // Validation for custom datatypes (Typed Literals)
        {
          "path": "dppk:netWeight",
          "name": "Net Weight (Kg)",
          "datatype": "dppk:KgWeightLiteral",
          // Regex ensures the lexical value is a valid numeric format
          "pattern": "^[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?$",
          "minCount": 0
        },
        {
          "path": "dppk:length",
          "name": "Length (Meters)",
          "datatype": "dppk:MetersLengthLiteral",
          "pattern": "^[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?$",
          "minCount": 0
        }
      ]
    },

    // --- DigitalDocumentShape ---
    {
      "@id": "dppkval:DigitalDocumentShape",
      "@type": "sh:NodeShape",
      "targetClass": "dppk:DigitalDocument",
      // "closed": true, // Temporarily disabled for flexibility
      "property": [
        {
          // Path must be dppk:name as used in the data
          "path": "dppk:name", 
          "name": "Document Name",
          "minCount": 1
        },
        {
          "path": "dppk:documentURL",
          "name": "Document URL",
          "minCount": 1
        },
        // Include documentType as it exists in the data and the shape is closed.
        {
            "path": "dppk:documentType",
            "name": "Document Type",
            "minCount": 0
        }
      ]
    },

    // ==================================================================
    // MERGED FROM core-shapes.shacl.jsonld
    // ==================================================================

    {
      "@id": "dppkval:DigitalProductPassportShape",
      "@type": "sh:NodeShape",
      "targetClass": "dppk:DigitalProductPassport",
      "property": [
          {
              "path": "dppk:productName",
              "minCount": 1,
              "message": "DPP must have a product name (dppk:productName)."
          },
          {
              "path": "dppk:manufacturer",
              "node": "dppkval:OrganizationShape",
              "message": "The manufacturer must conform to the Organization shape."
          },
          {
              "path": "dppk:economicOperator",
              "node": "dppkval:OrganizationShape",
              "message": "The economicOperator must conform to the Organization shape."
          }
      ]
    },
    {
      "@id": "dppkval:OrganizationShape",
      "@type": "sh:NodeShape",
      "targetClass": "dppk:Organization",
      "property": [
        {
          "path": "dppk:organizationName",
          "minCount": 1,
          "message": "Organization must have a name (dppk:organizationName)."
        },
        {
          "path": "dppk:gln",
          "pattern": "^[0-9]{13}$",
          "message": "GLN (dppk:gln) must be a 13-digit number."
        },
        {
           "path": "dppk:leiCode",
           "pattern": "^[A-Z0-9]{20}$",
           "message": "LEI Code (dppk:leiCode) must be a 20-character alphanumeric string."
        }
      ]
    },
    {
        "@id": "dppkval:QuantitativeValueShape",
        "@type": "sh:NodeShape",
        "targetClass": "dppk:QuantitativeValue",
        "property": [
          {
            "path": "dppk:value",
            "minCount": 1,
            "datatype": "xsd:decimal",
            "message": "QuantitativeValue must have a numeric value (dppk:value)."
          },
          {
            "path": "dppk:unitCode",
            "minCount": 1,
            "message": "QuantitativeValue must specify a unitCode (dppk:unitCode), preferably UN/CEFACT."
          }
        ]
    },
    {
        "@id": "dppkval:CertificationShape",
        "@type": "sh:NodeShape",
        "targetClass": "dppk:Certification",
        "property": [
            { "path": "dppk:certificationStandard", "minCount": 1, "message": "Certification must specify the standard or name (dppk:certificationStandard)." },
            { "path": "dppk:certificationIdentification", "minCount": 1, "message": "Certification must have an identifier or number (dppk:certificationIdentification)." }
        ]
    },

    // --- DoPShape ---
    {
      "@id": "dppkval:DoPShape",
      "@type": "sh:NodeShape",
      "targetClass": "dppk:DeclarationOfPerformance",
      // "closed": true, // Temporarily disabled for flexibility
      "property": [
        {
          "path": "dppk:dopIdentifier",
          "name": "DoP Identifier",
          "minCount": 1
        },
        {
          "path": "dppk:documentURL",
          "name": "Document URL",
          "minCount": 1
        }
      ]
    }
  ]
}