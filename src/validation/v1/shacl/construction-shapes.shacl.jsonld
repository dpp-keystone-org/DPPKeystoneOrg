{
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dppkval": "https://dpp-keystone.org/validation/v1/shacl/"
  },
  "@id": "dppkval:ConstructionShapes",
  "@type": "sh:ShapesGraph",
  
  "@graph": [
    {
      "@id": "dppkval:ConstructionProductShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": { "@id": "dppk:ConstructionProduct" },
      "sh:and": [
        { "sh:node": { "@id": "dppkval:DigitalProductPassportShape" } }
      ],
      "sh:property": [
        {
          "sh:path": { "@id": "dppk:documents" },
          "sh:name": "Documents",
          "sh:node": { "@id": "dppkval:DigitalDocumentShape" },
          "sh:minCount": 0
        },
        {
          "sh:path": { "@id": "dppk:railProfile" },
          "sh:name": "Rail Profile",
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": { "@id": "dppk:steelGrade" },
          "sh:name": "Steel Grade",
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": { "@id": "dppk:hasDoP" },
          "sh:name": "Declaration of Performance",
          "sh:node": { "@id": "dppkval:DoPShape" },
          "sh:minCount": 1
        }
      ]
    },
    {
      "@id": "dppkval:DigitalDocumentShape",
      "@type": "sh:NodeShape",
      "sh:property": [
        {
          "sh:path": { "@id": "dppk:name" }, 
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": { "@id": "dppk:documentURL" },
          "sh:nodeKind": "sh:IRI",
          "sh:minCount": 1
        }
      ]
    },
    {
      "@id": "dppkval:DoPShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": { "@id": "dppk:DeclarationOfPerformance" },
      "sh:property": [
        {
          "sh:path": { "@id": "dppk:dopIdentifier" },
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": { "@id": "dppk:documentURL" },
          "sh:nodeKind": "sh:IRI",
          "sh:minCount": 1
        }
      ]
    }
  ]
}