{
  // FIX: Import the standard SHACL context and define local prefixes.
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
      "xsd": "http://www.w3.org/2001/XMLSchema#",
      "dppk": "https://dpp-keystone.org/spec/v1/terms#",
      "dppkval": "https://dpp-keystone.org/validation/v1/shacl/",
      // rdf prefix is required for ignoredProperties (e.g., rdf:type)
      "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    },
  "@id": "dppkval:ConstructionShapes",
  "@type": "sh:ShapesGraph",
  
  "@graph": [
    {
      "@id": "dppkval:ConstructionProductShape",
      "@type": "sh:NodeShape",
      // Syntax updated for standard context (using prefixed name directly)
      "sh:targetClass": "dppk:ConstructionProduct",
      // Assumes dppkval:DigitalProductPassportShape is defined elsewhere and loaded.
      "sh:and": [
        { "sh:node": "dppkval:DigitalProductPassportShape" }
      ],
      "sh:property": [
        {
          "sh:path": "dppk:documents",
          "sh:name": "Documents",
          "sh:node": "dppkval:DigitalDocumentShape",
          "sh:minCount": 0
        },
        {
          "sh:path": "dppk:railProfile",
          "sh:name": "Rail Profile",
          "sh:nodeKind": "sh:Literal", 
          "sh:minCount": 1
        },
        {
          "sh:path": "dppk:steelGrade",
          "sh:name": "Steel Grade",
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": "dppk:hasDoP",
          "sh:name": "Declaration of Performance",
          "sh:node": "dppkval:DoPShape",
          "sh:minCount": 1
        },
        // Validation for custom datatypes (Typed Literals)
        {
          "sh:path": "dppk:netWeight",
          "sh:name": "Net Weight (Kg)",
          "sh:nodeKind": "sh:Literal",
          "sh:datatype": "dppk:KgWeightLiteral",
          // Regex ensures the lexical value is a valid numeric format
          "sh:pattern": "^[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?$",
          "sh:minCount": 1
        },
        {
          "sh:path": "dppk:length",
          "sh:name": "Length (Meters)",
          "sh:nodeKind": "sh:Literal",
          "sh:datatype": "dppk:MetersLengthLiteral",
          "sh:pattern": "^[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?$",
          "sh:minCount": 1
        }
      ]
    },

    // --- DigitalDocumentShape ---
    {
      "@id": "dppkval:DigitalDocumentShape",
      "@type": "sh:NodeShape",
      "sh:class": "dppk:DigitalDocument",
      "sh:closed": true,
      // Clean syntax for ignoredProperties enabled by standard context (@container: @list, @type: @id)
      "sh:ignoredProperties": [ "rdf:type" ],
      "sh:property": [
        {
          // Path must be dppk:name as used in the data
          "sh:path": "dppk:name", 
          "sh:name": "Document Name",
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": "dppk:documentURL",
          "sh:name": "Document URL",
          "sh:nodeKind": "sh:IRI",
          "sh:minCount": 1
        },
        // Include documentType as it exists in the data and the shape is closed.
        {
            "sh:path": "dppk:documentType",
            "sh:name": "Document Type",
            "sh:nodeKind": "sh:Literal",
            "sh:minCount": 0
        }
      ]
    },

    // --- DoPShape ---
    {
      "@id": "dppkval:DoPShape",
      "@type": "sh:NodeShape",
      "sh:class": "dppk:DeclarationOfPerformance",
      "sh:closed": true,
      "sh:ignoredProperties": [ "rdf:type" ],
      "sh:property": [
        {
          "sh:path": "dppk:dopIdentifier",
          "sh:name": "DoP Identifier",
          "sh:nodeKind": "sh:Literal",
          "sh:minCount": 1
        },
        {
          "sh:path": "dppk:documentURL",
          "sh:name": "Document URL",
          "sh:nodeKind": "sh:IRI",
          "sh:minCount": 1
        }
      ]
    }
  ]
}