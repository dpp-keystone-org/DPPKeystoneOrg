{
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dppkval": "https://dpp-keystone.org/spec/validation/v1/shacl/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "@vocab": "http://www.w3.org/ns/shacl#",
    "or": { "@id": "sh:or", "@container": "@list" },
    "node": { "@type": "@id" },
    "path": { "@type": "@id" },
    "targetClass": { "@type": "@id" },
    "class": { "@type": "@id" },
    "datatype": { "@type": "@id" }
  },
  "@id": "dppkval:ElectronicsShapes",
  "@type": "ShapesGraph",
  
  "@graph": [
    {
      "@id": "dppkval:ElectronicDeviceShape",
      "@type": "NodeShape",
      "targetClass": "dppk:DigitalProductPassport",
      "or": [
        {
            "not": {
                "property": {
                    "path": "dppk:contentSpecificationIds",
                    "hasValue": "draft_electronics_specification_id"
                }
            }
        },
        {
            "property": [
            {
                "path": "dppk:ratedPower",
                "minCount": 1,
                "message": "Electronic device must have a rated power (dppk:ratedPower) as a quantitative value."
            },
            {
                "path": "dppk:voltage",
                "minCount": 1,
                "message": "Electronic device must have a voltage (dppk:voltage) as a quantitative value."
            },
              {
                "path": "dppk:torque",
                "minCount": 1,
                "message": "Torque must be provided as a numeric value."
              },
              {
                  "path": "dppk:maximumRatedSpeed",
                  "minCount": 1,
                  "message": "Maximum Rated Speed must be provided."
              },
              {
                "path": "dppk:sparePartsAvailable",
                "datatype": "xsd:boolean",
                "minCount": 1,
                "message": "Spare Parts Availability must be a boolean."
              },
              {
                  "path": "dppk:serviceManualAvailable",
                  "datatype": "xsd:boolean",
                  "minCount": 1,
                  "message": "Service Manual Availability must be a boolean."
              }
            ]
        }
      ]
    }
  ]
}
