{
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dppkval": "https://dpp-keystone.org/spec/validation/v1/shacl/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "@vocab": "http://www.w3.org/ns/shacl#",
    "or": { "@id": "sh:or", "@container": "@list" },
    "node": { "@type": "@id" },
    "path": { "@type": "@id" },
    "targetClass": { "@type": "@id" },
    "class": { "@type": "@id" },
    "datatype": { "@type": "@id" },
    "nodeKind": { "@type": "@id" }
  },
  "@id": "dppkval:BatteryShapes",
  "@type": "ShapesGraph",
  
  "@graph": [
    {
      "@id": "dppkval:BatteryShape",
      "@type": "NodeShape",
      "targetClass": "dppk:DigitalProductPassport",
      "property": [
            {
              "path": "dppk:batteryCategory",
              "minCount": 1,
              "datatype": "xsd:string",
              "message": "Battery must have a category (dppk:batteryCategory)."
            },
            {
                "path": "dppk:batteryChemistry",
                "minCount": 1,
                "datatype": "xsd:string",
                "message": "Battery must declare its chemistry (dppk:batteryChemistry)."
            },
            {
                "path": "dppk:manufacturingDate",
                "minCount": 1,
                "datatype": "xsd:date",
                "message": "Battery must have a manufacturing date (dppk:manufacturingDate)."
            },
            {
                "path": "dppk:batteryMass",
                "minCount": 1,
                "datatype": "xsd:double",
                "message": "Battery must have a mass (dppk:batteryMass)."
            },
            {
                "path": "dppk:materialComposition",
                "minCount": 1,
                "nodeKind": "sh:BlankNodeOrIRI",
                "message": "Battery must have a material composition declaration."
            }
      ]
    }
  ]
}