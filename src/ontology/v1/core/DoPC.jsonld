{
  "@context": {
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dcterms": "http://purl.org/dc/terms/",
    "schema": "http://schema.org/"
  },
  "@id": "https://dpp-keystone.org/spec/ontology/v1/core/DoPC",
  "@type": "owl:Ontology",
  "dcterms:title": "DPP Core Ontology - Declaration of Performance and Conformity (DoPC)",
  "owl:imports": {
    "@id": "https://dpp-keystone.org/spec/ontology/v1/core/Product.jsonld"
  },
  "@graph": [
    {
      "@id": "dppk:DoPCBlock",
      "@type": "rdfs:Class",
      "rdfs:comment": "Data block for Declaration of Performance and Conformity.",
      "owl:equivalentClass": { "@id": "schema:Certification" },
      "rdfs:term_status": "unstable"
    },
    {
      "@id": "dppk:governedBy",
      "@type": "owl:AnnotationProperty",
      "rdfs:label": "Governed By Standard"
    },
    {
      "@id": "dppk:unit",
      "@type": "owl:AnnotationProperty",
      "rdfs:label": "Unit of Measurement"
    },

    // --- 1. Container Properties (Object Properties) ---
    // These correspond to the grouping keys in your JSON
    { "@id": "dppk:chlorideContent", "@type": "owl:ObjectProperty", "rdfs:label": "Chloride Content Group" },
    { "@id": "dppk:bondStrength", "@type": "owl:ObjectProperty", "rdfs:label": "Bond Strength Group" },
    { "@id": "dppk:thermalCompatibility", "@type": "owl:ObjectProperty", "rdfs:label": "Thermal Compatibility Group" },
    { "@id": "dppk:resistanceToCarbonation", "@type": "owl:ObjectProperty", "rdfs:label": "Carbonation Resistance Group" },
    { "@id": "dppk:reactionToFire", "@type": "owl:ObjectProperty", "rdfs:label": "Reaction to Fire Group" },
    { "@id": "dppk:elasticRecovery", "@type": "owl:ObjectProperty", "rdfs:label": "Elastic Recovery Group" },
    { "@id": "dppk:resistanceToFlow", "@type": "owl:ObjectProperty", "rdfs:label": "Resistance to Flow Group" },
    { "@id": "dppk:methodA", "@type": "owl:ObjectProperty", "rdfs:label": "Method A" },
    { "@id": "dppk:methodB", "@type": "owl:ObjectProperty", "rdfs:label": "Method B" },
    { "@id": "dppk:procedureA", "@type": "owl:ObjectProperty", "rdfs:label": "Procedure A" },
    { "@id": "dppk:procedureB", "@type": "owl:ObjectProperty", "rdfs:label": "Procedure B" },

    // --- 2. Leaf Data Points (Datatype Properties) ---
    // These hold the actual values and define Strict Units.

    // Chloride Content
    {
      "@id": "dppk:chlorideContentAt21DegC",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Chloride Content (21°C)",
      "dppk:governedBy": "EN 1015-17",
      "dppk:unit": "%",
      "rdfs:comment": "Maximum percentage by mass.",
      "rdfs:range": "xsd:decimal"
    },

    // Bond Strength
    {
      "@id": "dppk:bondStrengthAt28Days",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Bond Strength (28 Days)",
      "dppk:governedBy": "EN 1542:1999",
      "dppk:unit": "MPa",
      "rdfs:range": "xsd:decimal"
    },

    // Thermal Compatibility
    {
      "@id": "dppk:thermalCompatibilityWet",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Thermal Compatibility (Wet Surface)",
      "dppk:governedBy": "EN 13687-1",
      "dppk:unit": "MPa",
      "rdfs:range": "xsd:decimal"
    },

    // Carbonation (String Result)
    {
      "@id": "dppk:carbonationResistanceAt21DegC",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Resistance to Carbonation (21°C)",
      "dppk:governedBy": "EN 13295:2004",
      "dppk:unit": "Pass/Fail",
      "rdfs:range": "xsd:string"
    },

    // Reaction to Fire (System Specific)
    {
      "@id": "dppk:reactionToFireSystem1",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Reaction to Fire (AVCP System 1)",
      "dppk:governedBy": "EN 13501-1",
      "dppk:unit": "Euroclass",
      "rdfs:range": "xsd:string"
    },
    {
      "@id": "dppk:reactionToFireSystem3",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Reaction to Fire (AVCP System 3)",
      "dppk:governedBy": "EN 13501-1",
      "dppk:unit": "Euroclass",
      "rdfs:range": "xsd:string"
    },

    // Elastic Recovery
    {
      "@id": "dppk:elasticRecoveryMethodA25",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Elastic Recovery (Method A, 25% Elongation)",
      "dppk:governedBy": "ISO 7389:2002",
      "dppk:unit": "%",
      "rdfs:range": "xsd:decimal"
    },

    // Resistance to Flow
    {
      "@id": "dppk:flowResistanceProcedureA50",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Flow Resistance (Proc A, 50°C)",
      "dppk:governedBy": "ISO 7390:2002",
      "dppk:unit": "mm",
      "rdfs:range": "xsd:decimal"
    },

    // Flat Properties
    {
      "@id": "dppk:tensileStrengthAdhesion",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Adhesion Class",
      "dppk:governedBy": "N 12618-2",
      "dppk:unit": "Class",
      "rdfs:range": "xsd:string",
      "rdfs:domain": { "@id": "dppk:DoPCBlock" }
    },
    {
      "@id": "dppk:modulusOfElasticityInCompression",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Modulus of Elasticity",
      "dppk:governedBy": "EN 13412:2006",
      "dppk:unit": "GPa",
      "rdfs:range": "xsd:decimal",
      "rdfs:domain": { "@id": "dppk:DoPCBlock" }
    },
    {
      "@id": "dppk:capillaryAbsorption",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Capillary Absorption",
      "dppk:governedBy": "EN 13057:2002",
      "dppk:unit": "kg/(m²·h^0.5)",
      "rdfs:range": "xsd:decimal",
      "rdfs:domain": { "@id": "dppk:DoPCBlock" }
    },
    {
      "@id": "dppk:dangerousSubstances",
      "@type": "owl:DatatypeProperty",
      "rdfs:label": "Dangerous Substances",
      "dppk:unit": "Statement",
      "rdfs:range": "xsd:string",
      "rdfs:domain": { "@id": "dppk:DoPCBlock" }
    },
    {
        "@id": "dppk:referenceServiceLife",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Reference Service Life",
        "dppk:unit": "Years",
        "rdfs:range": "xsd:integer"
    }
  ]
}