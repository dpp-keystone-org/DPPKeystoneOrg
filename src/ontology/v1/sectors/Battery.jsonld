{
  "@context": {
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "schema": "https://schema.org/",
    "gs1": "https://ref.gs1.org/voc/",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dcterms": "http://purl.org/dc/terms/",
    "unece": "https://vocabulary.uncefact.org/",
    "@base": "https://dpp-keystone.org/spec/v1/terms"
  },
  "@id": "https://dpp-keystone.org/spec/ontology/v1/sectors/Battery",
  "@type": "owl:Ontology",
  "dcterms:title": "DPP Sector Ontology - Battery Definitions (v1)",
  "dcterms:description": "Defines sector-specific concepts required for the Battery Passport as per Regulation (EU) 2023/1542.",
  "owl:versionInfo": "1.0.0",
  // Import Core ontologies.
  "owl:imports": [
    { "@id": "https://dpp-keystone.org/spec/ontology/v1/core/Product.jsonld" },
    { "@id": "https://dpp-keystone.org/spec/ontology/v1/core/Compliance.jsonld" }
  ],

  "@graph": [
    // ==================================================================
    // Classes
    // ==================================================================

    {
      "@id": "dppk:Battery",
      "@type": "rdfs:Class",
      "rdfs:label": "Battery",
      "rdfs:comment": "A product that supplies electrical energy generated by direct conversion of chemical energy, as defined in Regulation (EU) 2023/1542.",
      "dcterms:source": {
        "@id": "https://eur-lex.europa.eu/eli/reg/2023/1542/oj",
        "rdfs:label": "Regulation (EU) 2023/1542 (Battery Regulation)"
      },
      "rdfs:subClassOf": { "@id": "dppk:Product" },
      "rdfs:term_status": "unstable"
    },
    {
        "@id": "dppk:BatteryCarbonFootprint",
        "@type": "rdfs:Class",
        "rdfs:label": "Battery Carbon Footprint (BCF)",
        "rdfs:comment": "Information related to the carbon footprint of the battery, calculated according to the relevant Product Environmental Footprint Category Rules (PEFCR).",
      "dcterms:source": {
        "@id": "https://eur-lex.europa.eu/eli/reg/2023/1542/oj",
        "rdfs:label": "Battery Regulation - Article 7 (Carbon footprint)"
      },
        "rdfs:subClassOf": { "@id": "dppk:EcoDesignProperty" },
        "rdfs:term_status": "unstable"
    },

    // ==================================================================
    // Properties (General Battery Information)
    // ==================================================================

    // --- Battery Category ---
    {
        "@id": "dppk:batteryCategory",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Battery Category",
        "rdfs:comment": "The category of the battery (e.g., Portable, LMT, EV, Industrial, SLI).",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "xsd:string" },
        "rdfs:term_status": "unstable"
    },

    // --- Battery Chemistry ---
    {
        "@id": "dppk:batteryChemistry",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Battery Chemistry",
        "rdfs:comment": "The chemical composition of the battery (e.g., Lithium-ion, Nickel-metal hydride, Lead-acid).",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "xsd:string" },
        "rdfs:term_status": "unstable"
    },

    // --- Place/Date of Manufacture ---
    {
        "@id": "dppk:dateOfManufacture",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Date of Manufacture",
        "rdfs:comment": "The date when the battery was manufactured.",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "xsd:date" },
        "owl:equivalentProperty": [
            {"@id": "unece:manufactureDateTime"}
        ],
        "rdfs:term_status": "unstable"
    },
    
    // ==================================================================
    // Properties (Performance and Durability)
    // ==================================================================

    // --- Rated Capacity ---
    {
        "@id": "dppk:ratedCapacity",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Rated Capacity",
        "rdfs:comment": "The total electric charge the battery can deliver under specific conditions. Value provided in Ampere-hours (Ah).",
        "dppk:unit": "kWh",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "xsd:decimal" },
        "rdfs:term_status": "unstable"
    },

    // --- Nominal Voltage ---
    {
        "@id": "dppk:nominalVoltage",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Nominal Voltage",
        "rdfs:comment": "The nominal voltage of the battery in Volts (V).",
        "dppk:unit": "V",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "xsd:decimal" },
        "rdfs:term_status": "unstable"
    },

    // --- Expected Lifetime ---
    {
        "@id": "dppk:expectedLifetime",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Expected Lifetime",
        "rdfs:comment": "The anticipated service life of the battery, often expressed in charge/discharge cycles or years.",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "dppk:QuantitativeValue" },
        "rdfs:term_status": "unstable"
    },

    // --- State of Health (SoH) ---
    {
        "@id": "dppk:stateOfHealth",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "State of Health (SoH)",
        "rdfs:comment": "A measure of the battery's condition relative to its ideal new condition. Applicable to EV, LMT, and Industrial batteries.",
        "dppk:unit": "%",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "xsd:decimal" }, // Expressed as a percentage (0.0 to 1.0)
        "rdfs:term_status": "unstable"
    },

    // ==================================================================
    // Properties (Materials and Composition)
    // ==================================================================
    
    // Note: Specific Critical Raw Materials (CRMs) like Cobalt, Lithium, Nickel, Graphite 
    // should be modeled using the core dppk:components relationship, where the component is 
    // identified as the specific material (an instance of dppk:Component), and properties like dppk:weightPercentage 
    // and dppk:recycledContentPercentage are applied to that component.

    // ==================================================================
    // Properties (Carbon Footprint)
    // ==================================================================

    {
        "@id": "dppk:batteryCarbonFootprint",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Battery Carbon Footprint",
        "rdfs:comment": "Relates the battery to its declared carbon footprint information.",
        "rdfs:domain": { "@id": "dppk:Battery" },
        "rdfs:range": { "@id": "dppk:BatteryCarbonFootprint" },
        "rdfs:term_status": "unstable"
    },
    {
        "@id": "dppk:bcfTotal",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Total Carbon Footprint",
        "rdfs:comment": "The total declared carbon footprint of the battery per functional unit.",
        "dppk:unit": "kg COâ‚‚ eq",
        "rdfs:domain": { "@id": "dppk:BatteryCarbonFootprint" },
        "rdfs:range": { "@id": "xsd:decimal" },
        "rdfs:term_status": "unstable"
    },
    {
        "@id": "dppk:bcfPerformanceClass",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Carbon Footprint Performance Class",
        "rdfs:comment": "The performance class of the battery's carbon footprint.",
        "rdfs:domain": { "@id": "dppk:BatteryCarbonFootprint" },
        "rdfs:range": { "@id": "xsd:string" },
        "rdfs:term_status": "unstable"
    },
    {
        "@id": "dppk:bcfDeclarationWebLink",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Carbon Footprint Declaration Web Link",
        "rdfs:comment": "A web link to a public version of the study supporting the carbon footprint declaration.",
        "rdfs:domain": { "@id": "dppk:BatteryCarbonFootprint" },
        "rdfs:range": { "@id": "xsd:anyURI" },
        "rdfs:term_status": "unstable"
    }
  ]
}
