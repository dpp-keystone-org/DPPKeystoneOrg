{
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dppkval": "https://dpp-keystone.org/spec/validation/v1/shacl/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "@vocab": "http://www.w3.org/ns/shacl#",
    "node": {
      "@type": "@id"
    },
    "path": {
      "@type": "@id"
    },
    "targetClass": {
      "@type": "@id"
    },
    "class": {
      "@type": "@id"
    },
    "datatype": {
      "@type": "@id"
    }
  },
  "@id": "dppkval:BatteryShapes",
  "@type": "ShapesGraph",
  "@graph": [
    {
      "@id": "dppkval:BatteryShape",
      "@type": "NodeShape",
      "targetClass": "dppk:Battery",
      "and": [
        {
          "node": "dppkval:DigitalProductPassportShape"
        }
      ],
      "property": [
        {
          "path": "dppk:batteryCategory",
          "minCount": 1,
          "message": "Battery must have a category (dppk:batteryCategory)."
        },
        {
          "path": "dppk:batteryChemistry",
          "minCount": 1,
          "message": "Battery must declare its chemistry (dppk:batteryChemistry)."
        },
        {
          "path": "dppk:dateOfManufacture",
          "minCount": 1,
          "datatype": "xsd:date",
          "message": "Battery must have a date of manufacture (dppk:dateOfManufacture)."
        },
        {
          "path": "dppk:ratedCapacity",
          "minCount": 1,
          "node": "dppkval:QuantitativeValueShape",
          "message": "Battery must have a rated capacity (dppk:ratedCapacity) conforming to QuantitativeValue."
        },
        {
          "path": "dppk:nominalVoltage",
          "minCount": 1,
          "node": "dppkval:QuantitativeValueShape",
          "message": "Battery must have a nominal voltage (dppk:nominalVoltage) conforming to QuantitativeValue."
        }
      ]
    }
  ]
}
