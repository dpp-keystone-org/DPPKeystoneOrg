{
  "@context": {
    "sh": "http://www.w3.org/ns/shacl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "dppk": "https://dpp-keystone.org/spec/v1/terms#",
    "dppkval": "https://dpp-keystone.org/spec/validation/v1/shacl/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "@vocab": "http://www.w3.org/ns/shacl#",
    "node": {
      "@type": "@id"
    },
    "path": {
      "@type": "@id"
    },
    "targetClass": {
      "@type": "@id"
    },
    "class": {
      "@type": "@id"
    },
    "datatype": {
      "@type": "@id"
    }
  },
  "@id": "dppkval:ConstructionShapes",
  "@type": "sh:ShapesGraph",
  "@graph": [
    {
      "@id": "dppkval:ConstructionProductShape",
      "@type": "sh:NodeShape",
      "targetClass": "dppk:ConstructionProduct",
      "and": [
        {
          "node": "dppkval:DigitalProductPassportShape"
        }
      ],
      "property": [
        {
          "path": "dppk:documents",
          "name": "Documents",
          "node": "dppkval:DigitalDocumentShape",
          "minCount": 0
        },
        {
          "path": "dppk:railProfile",
          "name": "Rail Profile",
          "minCount": 0
        },
        {
          "path": "dppk:steelGrade",
          "name": "Steel Grade",
          "minCount": 0
        },
        {
          "path": "dppk:hasDoP",
          "name": "Declaration of Performance",
          "node": "dppkval:DoPShape",
          "minCount": 0
        },
        {
          "path": "dppk:netWeight",
          "name": "Net Weight (Kg)",
          "datatype": "dppk:KgWeightLiteral",
          "pattern": "^[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?$",
          "minCount": 0
        },
        {
          "path": "dppk:length",
          "name": "Length (Meters)",
          "datatype": "dppk:MetersLengthLiteral",
          "pattern": "^[-+]?[0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?$",
          "minCount": 0
        }
      ]
    },
    {
      "@id": "dppkval:DoPShape",
      "@type": "sh:NodeShape",
      "targetClass": "dppk:DeclarationOfPerformance",
      "property": [
        {
          "path": "dppk:dopIdentifier",
          "name": "DoP Identifier",
          "minCount": 1
        },
        {
          "path": "dppk:documentURL",
          "name": "Document URL",
          "minCount": 1
        }
      ]
    }
  ]
}
