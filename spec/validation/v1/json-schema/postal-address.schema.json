{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dpp-keystone.org/spec/validation/v1/json-schema/postal-address.schema.json",
  "title": "Postal Address",
  "description": "The physical mailing address of an organization or location.",
  "type": "object",
  "properties": {
    "streetAddress": {
      "type": "string",
      "description": "Includes street name and number."
    },
    "postalCode": {
      "type": "string",
      "description": "The postal code."
    },
    "addressLocality": {
      "type": "string",
      "description": "The city or locality."
    },
    "addressCountry": {
      "type": "string",
      "description": "The country."
    }
  },
  "required": [
    "streetAddress",
    "postalCode",
    "addressLocality",
    "addressCountry"
  ]
}
