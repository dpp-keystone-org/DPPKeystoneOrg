{
  "@context": {
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "schema": "https://schema.org/",
    "gs1": "https://ref.gs1.org/voc/",
    "dppk": "https://dpp-keystone.org/v1/terms#",
    "dcterms": "http://purl.org/dc/terms/",
    "unece": "https://vocabulary.uncefact.org/",
    "@base": "https://dpp-keystone.org/v1/terms"
  },
  "@id": "https://dpp-keystone.org/ontology/v1/sectors/Textile",
  "@type": "owl:Ontology",
  "dcterms:title": "DPP Sector Ontology - Textile Definitions (v1)",
  "dcterms:description": "Defines sector-specific concepts required for the Textile DPP, based on the EU Strategy for Sustainable and Circular Textiles.",
  "owl:versionInfo": "1.0.0",
  // Import Core ontologies.
  "owl:imports": [
    { "@id": "https://dpp-keystone.org/ontology/v1/core/Product.jsonld" },
    { "@id": "https://dpp-keystone.org/ontology/v1/core/Compliance.jsonld" }
  ],

  "@graph": [
    // ==================================================================
    // Classes
    // ==================================================================

    {
      "@id": "dppk:TextileProduct",
      "@type": "rdfs:Class",
      "rdfs:label": "Textile Product",
      "rdfs:comment": "Any raw, semi-worked, or worked product which is exclusively composed of textile fibres, regardless of the mixing or assembly process employed.",
      "dcterms:source": {
        "@id": "https://eur-lex.europa.eu/legal-content/EN/TXT/?uri=CELEX:32011R1007",
        "rdfs:label": "Regulation (EU) No 1007/2011 (Textile Fibre Names)"
      },
      "rdfs:subClassOf": { "@id": "dppk:Product" }
    },
    {
        "@id": "dppk:FibreComposition",
        "@type": "rdfs:Class",
        "rdfs:label": "Fibre Composition",
        "rdfs:comment": "Details the specific type and percentage of textile fibres making up the product.",
        "rdfs:subClassOf": { "@id": "dppk:Product" } // Fibre is treated as a material/product
    },

    // ==================================================================
    // Properties (Fibre Composition)
    // ==================================================================

    // --- Fibre Composition Relationship ---
    {
        "@id": "dppk:fibreComposition",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Fibre Composition",
        "rdfs:comment": "Relates the textile product to its constituent fibres and their proportions.",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "dppk:FibreComposition" }
    },

    // --- Fibre Type ---
    {
        "@id": "dppk:fibreType",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Fibre Type",
        "rdfs:comment": "The specific type of fibre (e.g., Cotton, Polyester, Wool, Elastane).",
        "rdfs:domain": { "@id": "dppk:FibreComposition" },
        "rdfs:range": { "@id": "xsd:string" }
    },

    // --- Fibre Percentage ---
    {
        "@id": "dppk:fibrePercentage",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Fibre Percentage",
        "rdfs:comment": "The percentage of the total product weight constituted by this fibre.",
        "rdfs:domain": { "@id": "dppk:FibreComposition" },
        "rdfs:range": { "@id": "xsd:decimal" }
    },
    
    // ==================================================================
    // Properties (Circularity and Sustainability)
    // ==================================================================

    // --- Recycled Content (Note: Uses core dppk:recycledContentPercentage on the FibreComposition) ---

    // --- Presence of Non-Textile Parts of Animal Origin ---
    {
        "@id": "dppk:animalOriginNonTextile",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Presence of Non-Textile Parts of Animal Origin",
        "rdfs:comment": "Indicates the presence of materials such as leather, bone, or shell.",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "xsd:boolean" }
    },

    // --- Durability Indicators ---
    // These are often specific tests, modeled here generally.
    {
        "@id": "dppk:tearStrength",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Tear Strength",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "dppk:QuantitativeValue" }
    },
    {
        "@id": "dppk:abrasionResistance",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Abrasion Resistance",
        "rdfs:comment": "Resistance to wear, often measured in Martindale cycles.",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "dppk:QuantitativeValue" }
    },

    // --- Microplastic Release ---
    {
        "@id": "dppk:microplasticReleasePotential",
        "@type": "owl:ObjectProperty",
        "rdfs:label": "Microplastic Release Potential",
        "rdfs:comment": "Information regarding the propensity of the textile to release microplastics during washing or use.",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "dppk:QuantitativeValue" }
    },
    
    // ==================================================================
    // Properties (Care and Repair)
    // ==================================================================

    // --- Care Instructions (GINETEX) ---
    {
        "@id": "dppk:careInstructions",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Care Instructions",
        "rdfs:comment": "Standardized care symbols (e.g., GINETEX codes).",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "xsd:string" },
        "owl:equivalentProperty": [
          { "@id": "gs1:careLabel" },
          { "@id": "unece:textileCareInstructionCode" }
        ]
    },

    // --- Repairability Score/Information ---
    {
        "@id": "dppk:repairabilityInformation",
        "@type": "owl:DatatypeProperty",
        "rdfs:label": "Repairability Information",
        "rdfs:comment": "Instructions or scores related to the ease of repairing the textile product.",
        "rdfs:domain": { "@id": "dppk:TextileProduct" },
        "rdfs:range": { "@id": "rdf:langString" }
    }
  ]
}
