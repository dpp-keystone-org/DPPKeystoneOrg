{
    "@context": [
        // Import the Core DPP Context definitions.
        // Assumes this file will be hosted at the defined persistent URI.
        "https://dpp-keystone.org/contexts/v1/dpp-core.context.jsonld",
        
        // Define Electronics (EEE) specific terms.
        {
            // ==================================================================
            // EEE Classes (for use in @type)
            // ==================================================================
            "ElectronicDevice": "dppk:ElectronicDevice",
            "PowerTool": "dppk:PowerTool",

            // ==================================================================
            // Properties (Power and Energy)
            // ==================================================================
            // Note: These properties link to QuantitativeValue (defined in Core).
            "voltage": "dppk:voltage",
            "ratedPower": "dppk:ratedPower",
            "energyEfficiencyClass": "dppk:energyEfficiencyClass",

            // ==================================================================
            // Properties (Durability and Repairability)
            // ==================================================================
            "ipRating": "dppk:ipRating",

            "warranty": "dppk:warranty",
            // Explicitly type booleans for data integrity.
            "sparePartsAvailable": {
                "@id": "dppk:sparePartsAvailable",
                "@type": "xsd:boolean"
            },
            "serviceManualAvailable": {
                "@id": "dppk:serviceManualAvailable",
                "@type": "xsd:boolean"
            },
            
            "softwareUpdatePolicy": "dppk:softwareUpdatePolicy",

            // ==================================================================
            // Properties (Compliance and End-of-Life)
            // ==================================================================
            // Note: RoHS/REACH compliance uses the core 'complianceTopics'.
            
            "weeeCategory": "dppk:weeeCategory",
            "disassemblyInstructions": "dppk:disassemblyInstructions",

            // ==================================================================
            // Properties (Specialized: Power Tools)
            // ==================================================================
            "torque": "dppk:torque",
            "maximumRatedSpeed": "dppk:maximumRatedSpeed",
            "maximumDrillingDiameter": "dppk:maximumDrillingDiameter",
            "chargingTime": "dppk:chargingTime"
        }
        ,
        {
            // ==================================================================
            // Type Coercion for simple key-value measurements
            // This allows the instance data to be "torque": 20, while
            // semantically expanding to the full QuantitativeValue object.
            // ==================================================================
            "torque": {
                "@id": "dppk:torque",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "NU",
                "methodologyReference": "ISO 5393:2017 (Rotary tools for threaded fasteners)"
            },
            "maximumRatedSpeed": {
                "@id": "dppk:maximumRatedSpeed",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "RPM"
            },
            "ratedPower": {
                "@id": "dppk:ratedPower",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "WTT"
            },
            "voltage": {
                "@id": "dppk:voltage",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "VLT"
            },
            "maximumDrillingDiameter": {
                "@id": "dppk:maximumDrillingDiameter",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "MMT"
            },
            "chargingTime": {
                "@id": "dppk:chargingTime",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "MIN"
            },
            "warranty": {
                "@id": "dppk:warranty",
                "@type": "dppk:QuantitativeValue",
                "unitCode": "ANN"
            }
        }
    ]
}
